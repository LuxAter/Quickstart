{
  "Options": {
    "Name": "Project name",
    "Description": "Project description",
    "Dir": {
      "force": true,
      "Root": ["Root directory", "{{Name}}"]
    },
    "Config": {
      "force": true,
      "Pip": ["Create a pip installable package", true, "bool"],
      "Author": "Package Author",
      "PyEnv": {
        "help": "Enable PyEnv",
        "default": true,
        "Version": ["Python version", "3.6.5", ["2.4", "2.5", "2.7", "3.1", "3.2", "3.3.0", "3.4.0", "3.5.0", "3.6.0", "3.6.4", "3.6.5", "3.7.-dev"]]
      }
    },
    "Git": {
      "help": "Create a git repository",
      "default": true,
      "Ignore": ["Create default git ignore file", true, "bool"],
      "Remote": {
        "help": "Add remote repository",
        "default": true,
        "URL": "Remote url for git repository"
      }
    },
    "UnitTests": {
      "help": "Enable unit testing",
      "default": true,
      "Test": ["Test directory", "test"]
    },
    "CI": {
      "help": "Enable continuous integration services",
      "default": true,
      "Sys": ["Continuous integration service", "travis", ["none", "travis", "jenkins", "circle"]],
      "Cov": {
        "help": "Enable code coverage service",
        "default": true,
        "Sys": ["Code coverage service", "codecov", ["none", "codecov", "coveralls"]]
      }
    },
    "Doc": {
      "help": "Add documentation to the project",
      "default": true,
      "Doc": ["Documentation directory", "docs"],
      "Sys": ["Documentation engine", "none", ["none", "sphinx", "mkdocs", "doxygen", "docusaurus", "dauxio", "slate"]]
    }
  },
  "Events": {
    "Directories": [
      ["{{Dir.Root}}"],
      ["{{Dir.Root}}/{{Dir.Root}}"],
      ["Doc.Doc", "{{Dir.Root}}/{{Doc.Doc}}"]
    ],
    "Files": [
      ["Config.Pip", "{{Dir.Root}}/setup.py", "setup.py"],
      ["{{Dir.Root}}/README.rst", "README.rst"],
      ["{{Dir.Root}}/{{Name}}/{{Name}}.py", "source/main.py"],
      ["{{Dir.Root}}/{{Dir.Root}}/__init__.py", "source/__init__.py"]
    ],
    "Cmds": [
      ["Git", "git init {{Dir.Root}}/."],
      ["Git.Remote.URL", "cd {{Dir.Root}} && git remote add origin {{Git.Remote.URL}}"],
      ["Config.PyEnv.Version", "cd {{Dir.Root}} && pyenv local {{Config.PyEvn.Version}}"]
    ]
  }
}
