{
    "Options": {
        "General": [
            ["name", "Project name", "", "str"],
            ["description", "Project description", "", "any"],
            ["author", "Project author", "", "str"],
            ["git", "Create git repository", true, "boolean"]
        ],
        "Directories": [
            ["root_dir", "Root directory", "__name__", "path"],
            ["source_dir", "Source directory", "__name__", "path"]
        ],
        "Documentation": [
            ["docs", "Create documentation", true, "boolean"],
            {
                "check": ["docs", true],
                "opts": [
                    ["doc-sys", "Documentation constructor", "None", "select_list", ["Sphinx", "Mkdocs", "Markdown", "rST", "None"]]
                ]
            },
            ["doc_dir", "Documentation directory", "docs", "path"]
        ],
        "Continuouse Integration": [
            ["ci", "Enable continuous integrations services", true, "boolean"],
            {
                "check": ["ci", true],
                "opts": [
                    ["ci-service", "Continuous integration service", "None", "select_list", ["Travis-CI", "Jenkins", "Circle-CI"]],
                    ["apt-install", "Install from apt", "", "list"],
                    ["pip-install", "Install from pip", "", "list"],
                    ["coverage", "Enable code coverage service", "None", "select_list", ["None", "CodeCov", "Coveralls"]]
                ]
            }
        ]
    },
    "Data": [
        ["file", "python/source.py", "source_dir", "__name__.py"],
        ["file", "python/setup.py", ".", "setup.py"],
        ["file", "python/README.rst", ".", "README.rst"],
        ["file", "python/__init__.py", "source_dir", "__init__.py"],
        ["sub", "project_name", "name"],
        ["sub", "project_title", "__title__"],
        ["sub", "project_underline", "__underline__"],
        ["sub", "project_description", "description"],
        ["sub", "project_author", "author"],
        {
            "check": ["git", true],
            "data": [
                ["file", "python/.gitignore", ".", ".gitignore"],
                ["exe", "git init", "."]
            ]
        },
        {
            "check": ["docs", true],
            "data": [
                ["sub", "project_doc_dir", "doc_dir"],
                {
                    "check": ["doc-sys", "Sphinx"],
                    "data": [
                        ["file", "python/docs/Makefile", "doc_dir", "Makefile"],
                        ["file", "python/docs/source/conf.py", "doc_dir", "source/conf.py"],
                        ["file", "python/docs/source/index.rst", "doc_dir", "source/index.rst"]
                    ]
                },
                {
                    "check": ["doc-sys", "MkDocs"],
                    "data": [
                        ["file", "python/mkdocs.yml", ".", "mkdocs.yml"],
                        ["file", "python/docs/index.md", "doc_dir", "index.md"]
                    ]
                }
            ]
        },
        {
            "check": ["ci", true],
            "data": [{
                    "check": ["ci-service", "Travis-CI"],
                    "data": [
                        ["file", "python/travis.yml", ".", ".travis.yml"]
                    ]
                },
                {
                    "check": ["coverage", "None"],
                    "data": [
                        ["sub", "project_coverage", "$"]
                    ]
                },
                {
                    "check": ["coverage", "CodeCov"],
                    "data": [
                        ["sub", "project_coverage", "$- bash <(curl -s https://codecov.io/bash) || echo \"CodeCov Error\""]
                    ]
                }
            ]
        }
    ]
}
